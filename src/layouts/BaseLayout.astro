---
// 引入 Tailwind CSS（正確方式）
import '../styles/tailwind.css';
---

<html lang="en" class="w-[100vw] max-w-[640px] mx-auto overflow-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Astro Overlay Slide</title>
    <script type="module" src="/main.js"></script>
  </head>
  <body class="bg-white text-black relative overflow-hidden">
    <main class="relative z-0 h-full w-full">
      <slot />
    </main>
    <!-- Overlay container -->
    <div id="overlay" class="absolute inset-0 z-10 translate-x-full transition-transform duration-500 bg-white shadow-xl"></div>
  </body>
</html>
<style>
  html, body {
    height: 100%;
    width: 100%;
  }
</style>
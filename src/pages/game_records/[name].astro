---
import BaseLayout from "@/layouts/BaseLayout.astro"
import * as games from "@/libs/games";
import Header from "@/components/Header.astro";
import RecordList from "./RecordList.vue";

export function getStaticPaths() {
  return Object.entries(games).map(([name, data]) => ({
    params: { name },
    props: { ...data }
  }));
}

const { title, id, showSpecial } = Astro.props;
---

<BaseLayout>
  <div class=" bg-white min-h-svh">
    <div slot="header" class="bg-theme text-white h-11 sticky top-0 z-10">
      <Header title={title} />
    </div>
    <RecordList client:load id={id} class="px-4 mt-4" showSpecialBall={showSpecial} />
  </div>
</BaseLayout>
